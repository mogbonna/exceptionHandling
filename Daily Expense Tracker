class InvalidAmountError(Exception):
    pass

expenses = []
total = 0.0

print("=== Daily Expense Tracker ===")
print("Type 'done' to finish.\n")

while True:
    try:
        entry = input("Enter expense amount: ")

        if entry.lower() == "done":
            break

        amount = float(entry)
        if amount <= 0:
            raise InvalidAmountError("Amount must be greater than 0.")

        expenses.append(amount)
        total += amount
        print(f"Added: ₦{amount:.2f} | Total so far: ₦{total:.2f}")

    except ValueError:
        print("Invalid input. Please enter a number or 'done'.")

    except InvalidAmountError as iae:
        print("Error:", iae)

    except KeyboardInterrupt:
        print("\nInput cancelled by user.")
        break

    finally:
        print("Entry processed.\n")

print("=== Expense Summary ===")
print("All expenses:", expenses)
print(f"Total spent today: ₦{total:.2f}")
print("Thank you for using the tracker!")
